<h1>Planets</h1>

<%= link_to 'New Planet', new_planet_path, class: 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Star</th>
      <th>Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @planets.each do |planet| %>
      <tr>
        <td><%= planet.name %></td>
        <td><%= planet.star.name %></td>
        <td><%= planet.planet_type %></td>
        <td>
          <%= link_to 'Show', planet, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_planet_path(planet), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', confirm_delete_planet_path(planet), class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
