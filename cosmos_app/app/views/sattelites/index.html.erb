<h1>Sattelites</h1>

<%= link_to 'New Sattelite', new_sattelite_path, class: 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Planet</th>
      <th>Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @sattelites.each do |sattelite| %>
      <tr>
        <td><%= sattelite.name %></td>
        <td><%= sattelite.planet.name %></td>
        <td><%= sattelite.sattelite_type %></td>
        <td>
          <%= link_to 'Show', sattelite, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_sattelite_path(sattelite), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', confirm_delete_sattelite_path(sattelite), class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
